
<%= form_for @test_mode do |t| %>
  <table class="table table-striped">
    <tr>
      <td>
        <%=t.label :law_name,'法規:'%>
      </td>
      <td>
        <%= t.select(:law_name) do %>
          <%country=['FCC','CE','EMC','NCC','C-TICK','IC','JR','WorldWide']%>
            <% country.each do |c| %>
              <%= content_tag(:option, c, value: c) %>
                <% end %>
                  <% end %>
                    <!-- <t.select name="law_name" id="law_name" class='form-control form_input'>
                    <option value="FCC">FCC</option>
                    <option value="CE">CE</option>
                    <option value="EMC">EMC</option>
                    <option value="NCC">NCC</option>
                    <option value="C-TICK">C-TICK</option>
                    <option value="IC">IC</option>
                    <option value="JR">JR</option>
                    <option value="WorldWide">WorldWide</option>
                </select> -->
      </td>
      <td>
    </tr>
    <tr>
      <td>
        <%=t.label :expected_date_of_delivery,'預計發證日'%>
      </td>
      <td>
        <%=t.date_field :expected_date_of_delivery,class:'form-control form_input'%>
      </td>
    </tr>
    </td>

    <%=t.text_field :project_id,value:@project.id,class:'form-control form_input',style:"display:none"%>

  </table>
  <h3>測試項目</h3>
  <%= t.fields_for :test_items do |item| %>
    <%=render "test_item" ,item: item%>
  <%end%>
  <div class="row">
    <div class="col-12">

      <%if @test_mode.try(:errors)%>
        <ul style="list-style:none; color:red;">
          <% @test_mode.errors.full_messages.each do |e|%>
            <li>
              <%=e%>
            </li>
            <%end%>
        </ul>
        <%end%>

    </div>
    <div class="col-9"></div>
    <%=t.submit :建立, class:"btn btn-success col-2" %>
    <%end%>
