
<div class="row">
      <div class="col-6">
            <h4 id="Info">新增測試項目</h4>
                <%= form_for @test_item do |t|  %>
                  <table  class="table table-striped">
                        <tr>
                            <td><%=t.label :test_name,'法規:'%></td>
                      
                        <td>
                          <%= t.select(:test_name) do %>
                          <%country=['FCC','CE','EMC','NCC','C-TICK','IC','JR','WorldWide']%>
                            <% country.each do |c| %>
                            <%= content_tag(:option, c, value: c) %>
                            <% end %>
                          <% end %>
                        </td>
                       </tr>
                        <td>
                          <tr>
                            <td><%=t.label :expected_date_of_delivery,'預計發證日'%></td>
                            <td><%=t.date_field :expected_date_of_delivery,class:'form-control form_input'%></td>
                          </tr>
                        </td>
                        <td>
                              
                              
                          <tr>
                              <td><%=t.label :status,'狀態:'%></td>
                              <td>
                              <%= radio_button_tag(:status, "child") %>
                              <%= label_tag(:status_no, "未完成") %>
                              <%= radio_button_tag(:status, "adult") %>
                              <%= label_tag(:status_ok, "完成") %>     
                              </td>                         
                          </tr>
                        </td>
                </table>
                <div class="row">
                <div class="col-12">
                      
                      <%if @test_mode.try(:errors)%>
                        <ul style="list-style:none; color:red;">
                        <% @test_mode.errors.full_messages.each do |e|%>
                         <li><%=e%></li>
                        <%end%>
                        </ul>
                      <%end%>
                        
                </div>
                <div class="col-8"></div>
                <%=t.submit :建立, class:"btn btn-success col-1" %>
                </div>
                <hr>
              
        <%end%>
      </div>
      
     
</div>