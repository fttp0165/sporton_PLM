<div class="row">
  <div class="col-12" style="height:50px;"></div>
  <div class="col-4"></div>
<div class="card col-4" style="width: 18rem; ">
  <div class="card-body">
   <h2 class="card-title">Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  
  <div class="input-group input-group-sm mb-3">
    <div class="input-group-prepend">
    <%= f.label :email,class:"input-group-text",id:"inputGroup-sizing-sm" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control"  %>
  </div>
  </div>


  <div class="input-group input-group-sm mb-3">
  <div class="input-group-prepend">
    <%= f.label :name ,class:"input-group-text",id:"inputGroup-sizing-sm"%><br />
    <%= f.email_field :name, autofocus: true, autocomplete: "name" %>
  </div>
</div>

<div class="input-group input-group-sm mb-3">
  <div class="input-group-prepend">
    <%= f.label :password,class:"input-group-text",id:"inputGroup-sizing-sm" %>
    <%= f.password_field :password, autocomplete: "new-password" %>
    
</div>
<% if @minimum_password_length %>
<em>(<%= @minimum_password_length %> characters minimum)</em>
<% end %><br />
</div>

<div class="input-group input-group-sm mb-3">
  <div class="input-group-prepend">
    <%= f.label :password_confirmation ,class:"input-group-text",id:"inputGroup-sizing-sm"%><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
</div>

  <div class="actions">
    <%= f.submit "Sign up",class:"btn btn-success" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
