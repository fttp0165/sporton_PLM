<div class="row">
  <div class="col-1"></div>
 
  
  <div class="col-8">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">收件日</th>
            <th scope="col">案號</th>
            <th scope="col">客戶</th>
            <th scope="col">產品型號</th>
            <th scope="col">項目</th>
            <th scope="col">狀態</th>
            <th scope="col">業務</th>
            <th scope="col">負責PM</th>
            <th scope="col">編輯</th>
          </tr>
        </thead>
        <tbody>
          <% @projects.each do |project|%>
          <tr>
            <!-- 收件日 -->
            <td><%=project.receive_date%></td>
            <!-- 案號 -->
            <td><%= link_to  "#{project.project_number}",project_path(project) %></td> 
             <!-- 客戶 -->
            <td><%=project.customer%></td> 
             <!-- 產品型號 -->
             <td><%=project.product_number%></td> 
                <!-- 項目 -->
             <td> 
               <div class="row">
                 <%project.test_modes.each do |test_mode|%>
                     <span class="col-12">
                       <%=test_mode.law_name%>
                     </span>
                 <%end%>
               </div>
             </td>
               <!-- 狀態 -->
            <td><%=project.salesman%></td> 
               <!-- 業務 -->
            <td><%=project.salesman%></td> 
               <!-- 負責ＰＭ -->
            <td><%=project.PM%></td> 
              <!-- edit -->
            <td><%= link_to  '編輯',edit_project_path(project) %></td> 
          </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
  <div class="col-6"></div>
  <div class="col-6">    <%= paginate @projects %> </div>
</div>
